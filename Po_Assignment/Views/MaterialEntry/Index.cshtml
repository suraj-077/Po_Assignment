@model IEnumerable<Po_Assignment.Models.MaterialEntry>

@{
    ViewData["Title"] = "Index";

   
}

<style>
    th, td {
        border: 1px solid black;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #f2f2f2;
    }

    td {
        padding: 5px;
    }
</style>


<h1>Material list</h1>

<p>
    <a class="btn btn-primary" asp-action="AddMaterial" method="get">Add New</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Code
            </th>
            <th>
                Short Text
            </th>
            <th>
                Long Text
            </th>
            <th>
                Unit
            </th>
            <th>
                Reorder Level
            </th>
            <th>
                Min Order Quantity
            </th>
            <th>
                Is Active
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reorder_Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Min_Order_Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td><div class="d-flex">
                        <form asp-controller="MaterialEntry" asp-action="Edit" asp-route-id="@item.Id" method="get" class="mr-2">
                            <button type="submit" class="btn btn-primary mr-2">Edit</button>
                        </form>
                        &nbsp;&nbsp;
                        <form asp-controller="MaterialEntry" asp-action="Delete" asp-route-id="@item.Id" method="get" class="mr-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                </div>
                 </td>
            </tr>
        }
    </tbody>
</table>
