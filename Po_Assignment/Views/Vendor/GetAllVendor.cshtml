@model IEnumerable<Po_Assignment.Models.VendorMaster>

@{
    ViewData["Title"] = "Vendor List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<style>
    th, td {
        border: 1px solid black;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th {
        background-color: #f2f2f2;
    }
    td {
        padding: 5px;
    }
</style>

<h1>Vendor List</h1>

<p>
    <a asp-action="AddVendor" class="btn btn-primary">Add New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidTillDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine2)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.ContactEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidTillDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                   <div class="d-flex">
                    <form asp-controller="Vendor" asp-action="Edit" asp-route-id="@item.Id" method="get" class="mr-2" >
                            <button type="submit" class="btn btn-primary mr-2">Edit</button>
                    </form>
                    &nbsp;&nbsp;
                    <form asp-controller="Vendor" asp-action="Delete" asp-route-id="@item.Id" method="get">
                        <button type="submit" class="btn btn-danger ">Delete</button>
                    </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>