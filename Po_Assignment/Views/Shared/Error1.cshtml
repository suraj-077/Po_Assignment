<!-- Error.cshtml -->
<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
    <style>
        /* Add your CSS styles here */
    </style>
</head>
<body>
    <h1>Error</h1>
    <p>An error occurred while processing your request.</p>
    @* Display additional information about the error if available *@
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <p>Error message: @Html.Raw(ViewData["ErrorMessage"])</p>
    }

    @if (!string.IsNullOrEmpty(ViewBag.error))
    {
        <div class="alert alert-danger">
            @ViewBag.error
        </div>
    }
</body>
</html>
